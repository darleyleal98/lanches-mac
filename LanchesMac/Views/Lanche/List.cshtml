@model IEnumerable<LanchesMac.Models.Lanche>

<div>
    <h2>@ViewData["Titulo"]</h2>
    <h2><font size="2"></font>@ViewData["Data"]</h2>
</div>
<hr />
<div class="container">
    <div class="row">
        @foreach (var lanche in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@lanche.ImagemUrl" width="300" height="200" class="img-fluid"/></p>
                <h3>Preço: @lanche.Preco.ToString("c")</h3>
                <h4>@lanche.Nome</h4>
                <h4>@lanche.DescricaoCurta</h4>  
                <hr />
            </div>
        }
    </div>
</div>